<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fontscolors PUBLIC
    "-//NetBeans//DTD Editor Fonts and Colors settings 1.1//EN"
    "http://www.netbeans.org/dtds/EditorFontsColors-1_1.dtd">
<fontscolors>
<!-- Pawn -->
    <fontcolor name="error"
               default="error"/>
    
    <fontcolor name="identifier"
               default="identifier"/>
    
    <fontcolor name="tag"
               default="tag"
               foreColor="1B8B7D">
        <font style="bold"/>
    </fontcolor>
    
    <fontcolor name="keyword"
               default="keyword"/>
    
    <fontcolor name="keyword-directive"
               default="keyword"/>
    
    <fontcolor name="literal"
               default="keyword"/>
    
    <fontcolor name="number"
               default="number"/>
    
    <fontcolor name="separator"
               default="separator"/>
    
    <fontcolor name="operator"
               default="operator"/>
    
    <fontcolor name="special"
               default="special"/>
    
    <fontcolor name="whitespace"
               default="whitespace"/>
    
<!-- Pawn Characters -->
    <fontcolor name="character"
               default="char"/>
    
    <fontcolor name="character-escape"
               default="char">
        <font style="bold+italic"/>
    </fontcolor>
    
    <fontcolor name="character-escape-invalid"
               default="char"
               waveUnderlined="red"/>
        
<!-- Pawn Strings -->
    <fontcolor name="string"
               default="string"/>
    
    <fontcolor name="string-escape"
               default="string">
        <font style="bold+italic"/>
    </fontcolor>
    
    <fontcolor name="string-escape-invalid"
               default="string"
               waveUnderlined="red"/>
    
<!-- Pawn Documentation -->
    <fontcolor name="comment"
               default="comment"/>
    
    <fontcolor name="pawn-doc-tag"
               default="comment">
        <font style="bold"/>
    </fontcolor>
    
    <fontcolor name="pawn-doc-identifier"
               default="pawn-doc-identifier"/>
    
    <fontcolor name="html-tag"
               default="comment"
               foreColor="9999FF">
        <font style="bold+italic"/>
    </fontcolor>
    
    <fontcolor name="pawn-doc-hash"
               default="comment">
        <font style="italic"/>
    </fontcolor>
    
<!-- Pawn Preprocessor Directives -->
    <fontcolor name="preprocessor-directive"
               default="preprocessor-directive"
               foreColor="FF77FF">
        <font style="bold"/>
    </fontcolor>
    
    <fontcolor name="preprocessor-error"
               default="preprocessor-directive"
               waveUnderlined="red">
        <font style="plain"/>
    </fontcolor>
    
    <fontcolor name="preprocessor-identifier"
               default="preprocessor-directive">
        <font style="italic"/>
    </fontcolor>
    
    <fontcolor name="preprocessor-include"
               default="string"/>
    
    <fontcolor name="preprocessor-pragma"
               default="preprocessor-directive">
        <font style="bold"/>
    </fontcolor>
    
    <fontcolor name="preprocessor-if"
               default="preprocessor-directive">
        <font style="bold"/>
    </fontcolor>
    
    <fontcolor name="preprocessor-macro-param"
               default="preprocessor-directive">
        <font style="italic"/>
    </fontcolor>
    
    <fontcolor name="line-concatenation"
               default="preprocessor-directive">
        <font style="bold"/>
    </fontcolor>
</fontscolors>